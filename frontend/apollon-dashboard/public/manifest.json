{
  "manifest_version": 3,
  "name": "Apollon - Multichain ZK Oracle",
  "short_name": "Apollon",
  "version": "2.0.0",
  "description": "Zero-knowledge price predictions powered by ML ensemble models on NEAR Protocol with Aurora and cross-chain capabilities",
  "icons": {
    "128": "apollon_logo.jpg"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "apollon_logo.jpg"
    },
    "default_title": "Apollon Oracle"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://api.coingecko.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
