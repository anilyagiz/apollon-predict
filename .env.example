# Apollon - NEAR ZK Price Oracle Environment Variables

# =============================================================================
# API Keys (Price Data Sources)
# =============================================================================
CMC_API_KEY=your_coinmarketcap_api_key_here
COINGECKO_API_KEY=your_coingecko_api_key_here

# =============================================================================
# NEAR Protocol Configuration
# =============================================================================
NEAR_NETWORK=testnet
NEAR_NODE_URL=https://rpc.testnet.near.org
NEAR_WALLET_URL=https://testnet.mynearwallet.com
NEAR_HELPER_URL=https://helper.testnet.near.org
NEAR_EXPLORER_URL=https://testnet.nearblocks.io

# Contract IDs (deployed on NEAR)
NEAR_PUBLISHER_CONTRACT=apollon-publisher.testnet
NEAR_VERIFIER_CONTRACT=apollon-verifier.testnet

# Oracle Operator Account
NEAR_ORACLE_ACCOUNT_ID=oracle-operator.testnet
NEAR_ORACLE_PRIVATE_KEY=ed25519:your_near_private_key_here

# =============================================================================
# NEAR Intents Configuration
# =============================================================================
NEAR_INTENTS_ENABLED=true
NEAR_INTENTS_SOLVER_ID=apollon-solver.testnet
NEAR_INTENTS_MIN_DEPOSIT=0.1
NEAR_INTENTS_TIMEOUT_BLOCKS=100

# =============================================================================
# Shade Agent Configuration
# =============================================================================
SHADE_AGENT_ENABLED=false
SHADE_AGENT_ID=apollon-agent.testnet
SHADE_AGENT_ENDPOINT=https://api.shade.agents.near.org
SHADE_AGENT_API_KEY=your_shade_agent_api_key_here
SHADE_AGENT_MODEL=default
SHADE_AGENT_MAX_ACTIONS_PER_CYCLE=10

# =============================================================================
# Frontend Configuration
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_NEAR_NETWORK=testnet
NEXT_PUBLIC_PUBLISHER_CONTRACT=apollon-publisher.testnet
NEXT_PUBLIC_VERIFIER_CONTRACT=apollon-verifier.testnet

# =============================================================================
# Redis Configuration (for caching)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# =============================================================================
# ML Model Configuration
# =============================================================================
MODEL_RETRAIN_INTERVAL_HOURS=24
PREDICTION_CACHE_MINUTES=5
MIN_TRAINING_DATA_POINTS=100

# =============================================================================
# ZK Configuration
# =============================================================================
ZK_CIRCUITS_PATH=./backend/zk-privacy/circuits
ZK_PROVING_KEY_PATH=./keys/proving_key.zkey
ZK_VERIFICATION_KEY_PATH=./keys/verification_key.json

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/oracle.log
